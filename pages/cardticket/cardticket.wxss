/* pages/cardticket/cardticket.wxss */
page{
    background: #f2f2f2;
    height: 100%;
    width: 100%;
}
view {
    padding: 0px;
    margin: 0px;
    border: none;
    box-sizing: border-box;
}
.content{
    padding:10rpx 20rpx;
}
.nodata{
    padding-top:400rpx;
    text-align: center;
    font-size: 30rpx;
    color: #999;
}
.weui-flex{
    text-align: center;
    font-size:30rpx;
}
.one,{
    flex: 0 0 150rpx;
}
.one .placeholder{
    color:#fe6463;
}
.three{
    display: flex;
    flex: 0 0 150rpx;
    align-items:center;/*垂直居中*/
    justify-content: center;/*水平居中*/
    background: #fe6463;
    color:#fff;
    font-size:28rpx;
}
.two{
    flex: 0 0 360rpx;
}
.title{
    font-size:30rpx;
}
.desc{
    font-size: 24rpx;
    color:#999;
}
.ticket_type{
    font-size:22rpx;
    border:1px solid #fe6463;
    color:#fe6463;
    padding:4rpx 10rpx;
    border-radius: 8rpx;
}
.money{
    font-size:40rpx;
}
.list{
    background: #fff;
    margin-bottom:10rpx;
}
.weui-flex__item{
    padding:20rpx 0;
}
.bg{
    background: #ccc;
}
.lingqu{
    position: absolute;
    z-index: 1000;
    font-size:26rpx;
    height: 100rpx;
    width: 100rpx;
    line-height: 100rpx;
    border-radius: 50%;
    background: #41A18D;
    color:#fff;
    bottom:80rpx;
    right:20rpx;
    text-align: center;
}
