/* pages/personal/message/message.wxss */
.message-item {
    margin-top: 10rpx;
    display: flex;
    justify-content: flex-start;
    padding: 20rpx;
}

.messgae-image {
    width: 180rpx;
    height: 180rpx;
}

.message-right {
    margin-left: 36rpx;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
}

.message-title {
    font-size: 30rpx;
    color: #333;
}

.message-content {
    font-size: 20rpx;
    color: #999;
}

.message-time {
    font-size: 24rpx;
    color: #999;
}

.tips {
    margin-top: 20%;
    width: 100%;
    display: flex;
    justify-content: center;
    align-items: center;
    color: #999;
    font-size:30rpx;
}

